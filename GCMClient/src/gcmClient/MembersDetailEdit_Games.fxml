<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="memberEditBp" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gcmClient.MembersDetailsEditController">
   <center>
        <VBox>
         <children>
            <HBox spacing="10.0">
               <children>
                  <VBox minWidth="500.0">
                     <children>
                        <Label text="Available Games:">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                       <TableView fx:id="gamesTableView" editable="true" tableMenuButtonVisible="true">
                           <columns>
                              <TableColumn fx:id="gamesIdColumn" maxWidth="-1.0" minWidth="25.0" prefWidth="-1.0" text="ID" />
                              <TableColumn fx:id="gameTitleColumn" prefWidth="75.0" text="Game Title" />
                              <TableColumn fx:id="releaseDateColumn" prefWidth="75.0" text="Release Date" />
                              <TableColumn fx:id="gamesAdditionalNotesColumn" prefWidth="75.0" text="Notes" />
                           </columns>
                           <VBox.margin>
                              <Insets top="2.0" />
                           </VBox.margin>
                        </TableView>
                        <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="2.0">
                           <children>
                              <Button fx:id="sEBtn" mnemonicParsing="false" prefWidth="120.0" text="Add to Member" />
                           </children>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <VBox minWidth="500.0">
                     <children>
                        <Label text="Members Games List:">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TableView fx:id="gamesTableView1" editable="true" tableMenuButtonVisible="true">
                           <columns>
                              <TableColumn fx:id="gamesIdColumn1" maxWidth="-1.0" minWidth="25.0" prefWidth="-1.0" text="ID" />
                              <TableColumn fx:id="gameTitleColumn1" prefWidth="75.0" text="Game Title" />
                              <TableColumn fx:id="releaseDateColumn1" prefWidth="75.0" text="Release Date" />
                              <TableColumn fx:id="gamesAdditionalNotesColumn1" prefWidth="75.0" text="Notes" />
                           </columns>
                           <VBox.margin>
                              <Insets top="2.0" />
                           </VBox.margin>
                        </TableView>
                        <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="2.0">
                           <children>
                              <Button fx:id="sDelBtn1" mnemonicParsing="false" prefWidth="200.0" text="Delete Game From Members List" />
                           </children>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Add/Remove  Games:">
               <font>
                  <Font size="18.0" />
               </font></Label>
         </children>
         <BorderPane.margin>
            <Insets left="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <bottom>
      <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="2.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="okBtn1" mnemonicParsing="false" onAction="#okButtonClicked" prefWidth="70.0" text="Close" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" right="10.0" top="20.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
